<div class="row">
  <div class="col-lg-9">
    <div class="wrapper wrapper-content animated fadeIn">
      <div class="ibox">
        <div class="ibox-content">
          <div class="row">
            <div class="col-lg-12">
              <div class="m-b-md">

                <% cover_img = issue.images.attachments[0] %>
                <% images = issue.images.attachments[1..-1] %>

                <%= image_tag cover_img.variant(resize: "960x300^", crop: '960x300+0+0', :gravity => "Center") %>

                <div><%= I18n.t('.issue.name') %></div>

                <% if policy(issue).edit? %>
                  <a href="<%= edit_issue_path(issue) %>" class="btn btn-white btn-xs pull-right">Редактировать</a>
                <% end %>

                <h2><%= issue.name %></h2>


              </div>

              <!--              <p><%#= I18n.t('.issue.status.label') %></p>-->
              <!--                <p><%#= label_status(issue.status, :label) %></p>-->


              <div><%= I18n.t('.issue.description') %></div>

              <div><p><%= issue.description.html_safe %></p></div>
              <div class="flex">
                <% images.each_with_index do |image, i| %>
                  <div class=<%= "flex-initial flex-#{i}" %>>
                    <%= image_tag image.variant(resize: "100x100 ^ ", crop: '100x100+0+0', :gravity => "Center ") %>
                  </div>

                <% end %>
              </div>

            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>

