<div class="row">
  <div class="col-lg-12">
    <div class="wrapper wrapper-content animated fadeInUp">
      <div class="ibox">
        <div class="ibox-content">
          <div class="row">
            <div class="col-lg-12">
            <%= form_for(resource, as: 'issue', url: new_issue_path(resource), class: "form-issue form-horizontal") do |f| %>
                  <%= render "shared/forms/errors", resource: resource %>

                <div class="field">
                  <%= f.label :name %><br/>
                  <%= f.text_field :name, autofocus: true, autocomplete: "email" %>
                </div>
                <%= f.submit 'Submit', class: "btn btn-success" %>

              <% end %>


            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>