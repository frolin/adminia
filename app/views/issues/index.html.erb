              <th><%= I18n.t('.issue.status.label') %></th>
              <th>Категории</th>
            </tr>
            </thead>

            <tbody>

            <% issues.by_status.each_with_index do |issue, i| %>
              <tr>

                <td class="issue-title">
                  <p>
                    <%= link_to issue.name, issue_path(issue) %>
                  </p>
                  <br/>
                </td>

                <td><small> <%= l(issue.created_at) %></small></td>

                <td><%= label_status(issue.status, :label) %> </td>

                <td>
