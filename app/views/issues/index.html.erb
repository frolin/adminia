<div class="row">
  <div class="col-lg-12">
    <div class="wrapper wrapper-content animated fadeInUp">

      <div class="ibox">
        <div class="ibox-title">
          <h5>Все обращения</h5>
          <div class="ibox-tools">

            <a href="<%= new_issue_path %>" class="btn btn-w-m btn-warning">Новое обращение</a>
          </div>
        </div>
        <div class="ibox-content">
          <div class="row m-b-sm m-t-sm">
            <div class="col-md-1">
              <button type="button" id="loading-example-btn" class="btn btn-white btn-sm"><i class="fa fa-refresh"></i>
                Refresh
              </button>
            </div>
            <div class="col-md-11">
              <div class="input-group">

                <input type="text" placeholder="Search" class="input-sm form-control">
                <span class="input-group-btn">

                 <button type="button" class="btn btn-sm btn-primary"> Go!</button>
                </span>
              </div>
            </div>
          </div>


          <table class="table table-hover">

            <thead>
            <tr>
              <th><%= I18n.t('.issue.status.label') %></th>
              <th>Сообщение</th>
              <th>Дата создания</th>
              <th>Категории</th>
            </tr>
            </thead>

            <tbody>

            <% issues.by_status.each do |issue| %>
              <tr>
                <td><%= label_status(issue.status, :label) %> </td>

                <td class="issue-title">
                  <p>
                    <%= link_to issue.name, issue_path(issue) %>
                  </p>
                  <br/>
                </td>

                <td><small> <%= l(issue.created_at) %></small></td>


                <td>
                  <ul class="tag-list" style="padding: 0">
                    <li><a href=""><i class="fa fa-tag"></i> Zender</a></li>
                    <li><a href=""><i class="fa fa-tag"></i> Lorem ipsum</a></li>
                  </ul>
                </td>

                <!--                  <td class="issue-completion">-->
                <!--                    <small>Completion with: 48%</small>-->
                <!--                    <div class="progress progress-mini">-->
                <!--                      <div style="width: 48%;" class="progress-bar"></div>-->
                <!--                    </div>-->
                <!--                  </td>-->
                <td class="issue-people">
                  <%# issue.images.each do |image| %>
                  <%#= image_tag image, class: 'img-circle' %>
                  <%# end %>
                </td>
                <!--                  <td class="issue-actions">-->
                <!--                    <a href="#" class="btn btn-white btn-sm"><i class="fa fa-folder"></i> View </a>-->
                <!--                    <a href="#" class="btn btn-white btn-sm"><i class="fa fa-pencil"></i> Edit </a>-->
                <!--                  </td>-->
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>


