<div class="login-bg">

</div>




<div class="middle-box text-center loginscreen  animated fadeInDown">
  <div>
    <div class="img-fluid">
      <img src="<%= image_path 'flamandia-logo.png' %>" class="img-responsive" alt="Логотип">
    </div>
    <br>
    <div class="login-welcome">
      <h2><%= I18n.t('.login.welcome') %></h2>
      <h4><%= I18n.t('.login.welcome_2') %></h4>
    </div>

    <br>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'm-t') do |f| %>
      <!-- DEVISE -->
      <% if notice %>
        <p class="alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>

      <div class="form-group">
        <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email", placeholder: I18n.t('activerecord.attributes.user.email') %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, class: 'form-control', autocomplete: "current-password", placeholder: I18n.t('activerecord.attributes.user.password') %>
      </div>

      <div class="actions">
        <%= f.submit I18n.t('devise.sessions.new.sign_in'), class: 'btn btn-primary block full-width login-btn' %>
      </div>


      <%# if devise_mapping.rememberable? %>
      <!--        <div class="form-group">-->
      <%#= f.check_box :remember_me %>
      <%#= f.label :remember_me %>
      <!--        </div>-->
      <%# end %>

      <%#- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <!--        <%#= link_to I18n.t('devise.shared.links.forgot_your_password'), new_password_path(resource_name) %><br/>-->
      <%# end %>

    <% end %>


    <!--    <p class="m-t"><small>Inspinia we app framework base on Bootstrap 3 &copy; 2015</small></p>-->
  </div>
</div>








